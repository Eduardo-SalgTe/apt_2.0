<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gestion">

    <TextView
        android:id="@+id/tv_est1_titulo"
        android:layout_width="220dp"
        android:layout_height="34dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="4dp"
        android:text="@string/rbt_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_est1_nombre"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/chofer_nombre"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_est1_titulo" />

    <Button
        android:id="@+id/bt_est1_busc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:onClick="bscNomb"
        android:text="@string/buscar"
        app:layout_constraintStart_toEndOf="@+id/et_est1_nombre"
        app:layout_constraintTop_toBottomOf="@+id/tv_est1_titulo" />

    <ListView
        android:id="@+id/lv_est1_1"
        android:layout_width="365dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_est1_nombre" />

    <ListView
        android:id="@+id/lv_est1_2"
        android:layout_width="368dp"
        android:layout_height="51dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lv_est1_1" />

    <TextView
        android:id="@+id/tmp"
        android:layout_width="298dp"
        android:layout_height="200dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="32dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lv_est1_2" />

    <Button
        android:id="@+id/btn_sta_view"
        android:layout_width="196dp"
        android:layout_height="54dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="16dp"
        android:onClick="toEstad2"
        android:text="@string/b_viewPDF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tmp" />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu_Chofer">

    <TextView
        android:id="@+id/tv_chosm_titulo"
        android:layout_width="229dp"
        android:layout_height="41dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="16dp"
        android:text="@string/rbt_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:layout_width="244dp"
        android:layout_height="145dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_chosm_titulo">

        <RadioButton
            android:id="@+id/rb_chosm_consultar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="toConsulta"
            android:text="@string/sub1" />

        <RadioButton
            android:id="@+id/rb_chosm_registrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="toRegistrar"
            android:text="@string/sub2" />

        <RadioButton
            android:id="@+id/rb_chosm_modificar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="toModificar"
            android:text="@string/sub3" />
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>